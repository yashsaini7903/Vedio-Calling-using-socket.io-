<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>Video Call</title>
  <script src="https://cdn.tailwindcss.com"></script>
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.1/css/all.min.css" integrity="sha512-2SwdPD6INVrV/lHTZbO2nodKhrnDdJK9/kg2XD1r9uGqPo1cUbujc+IYdlYdEErWNu69gVcYgdxlmVmzTWnetw==" crossorigin="anonymous" referrerpolicy="no-referrer" />
  <script src="/socket.io/socket.io.js"></script>
</head>
<body class="bg-gray-900 text-white font-sans min-h-screen flex flex-col">
  <!-- Navbar -->
  <nav class="bg-gradient-to-r from-blue-700 to-purple-700 p-4 shadow-md flex justify-between items-center">
    <h1 class="text-lg md:text-xl font-bold">Vedio call with doctor</h1>
    <button class="bg-red-600 hover:bg-red-700 px-3 py-1 md:px-4 md:py-2 rounded-lg text-sm">Leave</button>
  </nav>

  <main class="flex-grow max-w-5xl mx-auto p-4 md:p-6 w-full">
    <!-- User Join Section -->
    <div class="flex flex-col sm:flex-row items-center justify-center gap-3 mb-6">
      <input
        id="inp"
        type="text"
        placeholder="Enter your name"
        class="border border-gray-500 bg-gray-800 rounded-lg px-3 py-2 w-full sm:w-1/3 focus:outline-none focus:ring-2 focus:ring-blue-500"
      />
      <button
        id="adduser"
        class="bg-blue-600 text-white px-4 py-2 rounded-lg hover:bg-blue-700 transition w-full sm:w-auto"
      >
        Join
      </button>
    </div>

    <!-- Participants -->
    <div class="bg-gray-800 shadow-md rounded-lg p-4 mb-6">
      <h2 class="text-lg font-semibold mb-2">Participants</h2>
      <ul id="userlist" class="space-y-2 text-gray-300 text-sm md:text-base"></ul>
    </div>

    <!-- Video Section -->
    <div id="main" class="grid grid-cols-1 md:grid-cols-2 gap-4 md:gap-6 h-[30vh] md:h-[40vh]">
      <!-- Local Video -->
      <div class="relative bg-black rounded-lg overflow-hidden shadow-lg">
        <video
          id="you"
          autoplay
          muted
          playsinline
          class="w-full h-full object-cover"
        ></video>
        <span class="absolute bottom-2 left-2 bg-black/60 px-2 py-1 rounded text-xs">You</span>
      </div>

      <!-- Remote Video -->
      <div class="relative bg-black rounded-lg overflow-hidden shadow-lg">
        <video
          id="client"
          autoplay
          playsinline
          class="w-full h-full object-cover"
        ></video>
        <span class="absolute bottom-2 left-2 bg-black/60 px-2 py-1 rounded text-xs">Remote</span>
      </div>
    </div>

    <!-- Controls -->
    <div class="fixed bottom-6 left-1/2 transform -translate-x-1/2 flex gap-6 bg-black/40 px-6 py-3 rounded-full shadow-lg backdrop-blur-md">
    <!-- Mic Button -->
    <button class="w-12 h-12 flex items-center justify-center bg-gray-700 hover:bg-gray-600 rounded-full transition shadow-md">
      <i data-feather="mic" class="w-6 h-6"><i class="fa-solid fa-microphone"></i></i>
    </button>

    <!-- Camera Button -->
    <button class="w-12 h-12 flex items-center justify-center bg-gray-700 hover:bg-gray-600 rounded-full transition shadow-md">
      <i data-feather="video" class="w-6 h-6"><i class="fa-solid fa-camera"></i></i>
    </button>

    <!-- End Call -->
    <button class="w-12 h-12 flex items-center justify-center bg-red-600 hover:bg-red-700 rounded-full transition shadow-md">
      <i data-feather="phone-off" class="w-6 h-6"><i class="fa-solid fa-phone"></i></i>
    </button>
  </div>
  </main>

  <script src="/index.js"></script>
</body>
</html>
